<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.actinarium.aligned.TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/rule_remove"
            app:leading="32dp"
            app:lastLineDescent="16dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="Offset â€” X"/>

    <ImageButton
            android:id="@+id/rule_remove"
            android:background="?attr/selectableItemBackground"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete_black_24dp"
            android:contentDescription="@string/delete_measurement"/>

    <com.actinarium.kinetic.KineticChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:paddingTop="16dp"
            android:paddingStart="18dp"
            android:paddingBottom="16dp"
            android:paddingRight="8dp"
            android:layout_below="@+id/title"
            android:layout_toStartOf="@+id/scale_container"
            app:lineColor="@color/chartLine"
            app:lineThickness="@dimen/chart_line_thickness"
            app:axisColor="@color/chartAxis"
            app:axisThickness="@dimen/chart_axis_thickness"/>

    <FrameLayout
            android:id="@+id/scale_container"
            android:layout_width="64dp"
            android:layout_height="@dimen/chart_height"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/chart"
            android:layout_alignBottom="@+id/chart"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:clipToPadding="false"
            android:clipChildren="false">

        <SeekBar
                android:id="@+id/scale_0"
                android:layout_width="@dimen/chart_height"
                android:layout_height="16dp"
                android:progress="20"
                android:max="100"
                android:rotation="90"
                android:transformPivotX="8dp"
                android:transformPivotY="8dp"/>

        <SeekBar
                android:id="@+id/scale_1"
                android:layout_width="@dimen/chart_height"
                android:layout_marginLeft="24dp"
                android:layout_height="16dp"
                android:progress="20"
                android:max="100"
                android:rotation="90"
                android:transformPivotX="8dp"
                android:transformPivotY="8dp"/>

    </FrameLayout>

    <CheckBox
            android:id="@+id/rectify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rectify"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layout_below="@+id/chart"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="@string/export"
            android:layout_below="@+id/chart"
            android:layout_alignParentEnd="true"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hairline" />


</RelativeLayout>